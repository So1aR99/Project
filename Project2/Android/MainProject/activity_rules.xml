<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ruleszzang"
    tools:context=".RulesActivity">

    <TextView
        android:id="@+id/ruletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rules"
        android:textColor="#17BAFF"
        android:textSize="60sp"
        android:background="#2BFFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/rulestext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rule"
        android:textSize="23sp"
        android:textColor="#000000"
        android:background="#58FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/ruletext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/homebtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home2"
        android:textSize="30sp"
        android:backgroundTint="#32F66E87"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/heart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/heart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rulestext"/>
    <TextView
        android:id="@+id/hearttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생명이 5개 이하일 때 먹으면 생명 +1"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="#58FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/rulestext"
        app:layout_constraintLeft_toRightOf="@id/heart"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/bouns"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bonus"
        app:layout_constraintTop_toBottomOf="@id/heart"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/bounstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="점수 2배"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="#58FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/hearttext"
        app:layout_constraintLeft_toRightOf="@id/bouns"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/bonus_score"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bonus_score"
        app:layout_constraintTop_toBottomOf="@id/bouns"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/bounstext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="점수 +50"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="#58FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/bounstext"
        app:layout_constraintLeft_toRightOf="@id/bonus_score"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/bomb"
        android:layout_width="33dp"
        android:layout_height="35dp"
        android:background="@drawable/bomb"
        app:layout_constraintTop_toBottomOf="@id/bonus_score"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="점수 -30, 생명 -1"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="#58FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/bounstext2"
        app:layout_constraintLeft_toRightOf="@id/bomb"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>